<section id="movie-details">
    <div id="img-container">
        <img src="{{movie.image}}" alt="">
    </div>
    <div id="movie-info">
    <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>Director: {{movie.director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <ul id="showtimes">
            {{#each movie.showtimes}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</section>
